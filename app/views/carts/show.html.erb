<div class="cart--banner">
  <h1>your <span class="sniglet">SHOPPIN'</span> <span class="waiting-for-the-sunrise">CART</span></h1>
  <h4>Your total is <%= number_to_currency current_order.subtotal %>.</h4>

  <%= form_tag charges_path do %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"

            data-description="MICHAKA"
            data-amount="<%= current_order.subtotal_cents %>"
            data-locale="auto">
    </script>
  <% end %>

  <br>
</div>

<div class="shopping-cart">
  <%= render "shopping_cart" %>
</div>

