<div class="designtool">
  <%= form_for(@product) do |f| %>

  <div class="banner">
    <h1><span class="sniglet">beAd</span><span class="waiting-for-the-sunrise">StAtiON</span></h1>
    <%= f.text_field :name, placeholder: "name it, yo", class: "necklaceNamer" %>

    <div class="custom-dropdown strandPicker">
      <div class="selector">
        <p>STRAND</p>
      </div>
      <div class="dropdown">
        <div class="option">black & white</div>
        <div class="option">black</div>
      </div>
    </div>

    <div class="custom-dropdown lengthPicker">
      <div class="selector">
        <p>LENGTH</p>
      </div>
      <div class="dropdown">
        <div class="option">55cm</div>
        <div class="option">80cm</div>
      </div>
    </div>

    <input type="number" class="quantity" min="1" value="1" onkeydown="return false">
    <input type="text" readonly="true" class="priceDisplay">

    <%= f.submit 'ADD TO CART', class: "save-button" %>
  </div>

  <br>

  <div class="necklace-view">
    <i class="fa fa-chevron-down beadSelector"></i>
    <div class="beads">
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead1", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead2", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead3", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead4", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead5", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead6", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead7", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead8", class: "bead" %>
      <%= image_tag "editor/beads/square_white_solid.png", id: "bead9", class: "bead" %>
    </div>
    <i class="fa fa-chevron-up beadSelector"></i>
  </div>

  <div class="beadpicker">
    <%= render 'beadpicker' %>
    <div class=" beadGraveyard">
    </div>
    <%= f.hidden_field :bead1, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead2, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead3, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead4, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead5, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead6, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead7, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead8, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :bead9, style: "display:none;", value: "square_white_solid" %><br>
    <%= f.hidden_field :strand, style: "display:none;", value: "black & white" %><br>
    <%= f.hidden_field :price %>
  </div>
  <% end %>

  <%= form_for @order_item, remote: true do |f| %>
    <div class="input-group">
      <%= f.hidden_field :quantity, value: 1, class: "form-control", min: 1 %>
      <div class="input-group-btn">
        <%= f.hidden_field :product_id %>
      </div>
    </div>
  <% end %>



</div>
